<!DOCTYPE html>
<html>
  <head>
    <title>Directory</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
    </script>
    <![endif]-->
  </head>

  <body>
  <header class="navbar navbar-fixed-top">
    <div class="container">
      <nav>
        <%= link_to image_tag("Amgen_logo_white.png", alt: "Amgen logo", size: "214x50"), root_path, "data-turbolinks" => "false" %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Directorio",   employees_directory_path, "data-turbolinks" => "false" %></li>
          <% if logged_in? %>
              <li class="dropdown">
                <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                  <i class="glyphicon glyphicon-user"></i> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <% if current_employee.admin? %>
                    <li><%= link_to "Áreas",   areas_path, "data-turbolinks" => "false" %></li>
                    <li class="divider"></li>
                  <% end %>
                  <li>
                    <%= link_to "Cerrar sesión", logout_path, method: :delete %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to "Iniciar sesión", login_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>
