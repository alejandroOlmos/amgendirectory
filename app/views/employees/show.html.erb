<div class="center jumbotron">
  <h1>Detalle</h1>

  <%= flash_messages %>

  <p>
    <strong>Nombre:</strong>
    <%= @employee.name %>
  </p>

  <p>
    <strong>Nombre de usuario:</strong>
    <%= @employee.username %>
  </p>

  <p>
    <strong>Staff ID:</strong>
    <%= @employee.staff_id %>
  </p>

  <p>
    <strong>Extensi&oacute;n:</strong>
    <%= @employee.extension %>
  </p>

  <p>
    <strong>N&uacute;mero celular:</strong>
    <%= @employee.cell_phone %>
  </p>

  <p>
    <strong>Correo electr&oacute;nico:</strong>
    <%= @employee.email %>
  </p>

  <p>
    <strong>&Aacute;rea:</strong>
    <%= @employee.area.name %>
  </p>

  <p>
    <strong>Tipo de usuario:</strong>
    <%= @employee.admin ? "Administrador" : "Usuario" %>
  </p>

  <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_area_employee_path(@area, @employee), class: "btn btn-lg btn-warning" %>
  <%= link_to '<i class="glyphicon glyphicon-arrow-left"></i>'.html_safe, area_employees_path, class: "btn btn-lg btn-primary", "data-turbolinks" => "false" %>
</div>